<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.quanteq.white.Orderpage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:id="@+id/singleImageView"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginLeft="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item Name:"
        android:alpha="0"
        android:textColor="@color/colorPrimary"
        android:id="@+id/poodname"/>

    <TextView
        android:id="@+id/singleTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_marginLeft="40dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textAllCaps="true"/>

</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Desc:"
            android:alpha="0"
            android:textColor="@color/colorPrimary"
            android:id="@+id/poodD"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_marginLeft="50dp"
        android:id="@+id/singleDesc"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price:"
            android:alpha="0"
            android:textColor="@color/colorPrimary"
            android:id="@+id/plice"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/colorAccent"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_marginLeft="110dp"
        android:id="@+id/singlePrice"/>

    </LinearLayout>





        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="8dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="3dp"
            >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Recipes"
        android:textStyle="bold"
        android:gravity="center"
        android:shadowColor="@color/colorAccent"
        android:layout_gravity="center"/>

        <LinearLayout
    android:layout_marginLeft="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="1."/>
    <TextView
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="2."/>

</LinearLayout>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="3."/>
        <TextView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="4."/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="5."/>
        <TextView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="6."/>

    </LinearLayout>

</LinearLayout>

        </android.support.v7.widget.CardView>

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:elevation="8dp"
    app:cardCornerRadius="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

     <!--   <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="14dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:text="=============================================="-->
            android:id="@+id/recz"/>
   <!-- <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Quantity"
        android:id="@+id/quantity"/> -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/Nquantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Quantity:"
            android:textAllCaps="false"
            />

        <Button
            android:id="@+id/decrement"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_marginLeft="35dp"
            android:background="@drawable/corners3"
            android:layout_marginTop="10dp"
            android:onClick="decrementquantity"
            android:text="-"
            android:textSize="20sp"

            />

        <TextView
            android:id="@+id/quantitychange_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="1"
            android:textAllCaps="true"
            android:textSize="20sp" />


        <Button
            android:id="@+id/increment"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:onClick="incrementquantity"
            android:text="+"
            android:background="@drawable/corners3"
            android:textSize="20sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/adr"
            android:text="Table:"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:hint="(Restaurant Service Only)"
        android:id="@+id/location"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tabr"
            android:text="Address:"
           />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:hint="(Home Service only)"
        android:id="@+id/location2"/>

    </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>

     <!--   <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="7dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:text="=============================================="
            android:id="@+id/recs2"/>-->

        <Button
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:onClick="orderItemClicked"
            android:gravity="center"
            android:layout_gravity="center"
           android:layout_marginTop="15dp"
            android:text="Place Order"
            android:background="@drawable/corners3"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textAllCaps="false" />


<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="8dp"
    app:cardCornerRadius="3dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="10dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="14dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:text="******Print Receipt Request***** "
        android:layout_marginLeft="10dp"
        android:id="@+id/rec"

      />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="* Please connect to printer to check availability first! "
        android:textColor="@color/colorAccent"/>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    </LinearLayout>

<LinearLayout
    android:layout_marginTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:layout_marginLeft="12dp"
        android:id="@+id/printer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:text="Printer Status:"
        />

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="not connected"
        />

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
       >

        <Button
            android:id="@+id/open"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dip"
            android:textAllCaps="false"
            android:background="@drawable/corners3"
            android:text="Connect to Printer" />

        <Button
            android:id="@+id/send"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:background="@drawable/corners3"
            android:text="Print Receipt"
            android:layout_marginLeft="70dp"
            android:textAllCaps="false"/>




    </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tot"
            android:text="Total:"
            android:alpha="0"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="14dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:text="********************************"
            android:layout_marginLeft="10dp"
            android:id="@+id/rec2" />
    </LinearLayout>



</android.support.v7.widget.CardView>
    </LinearLayout>


</ScrollView>
