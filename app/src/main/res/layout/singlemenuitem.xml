<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context="com.example.quanteq.white.Appetizer">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="140dp">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/foodImage"
                android:background="@drawable/z"
                android:layout_width="100dp"
                android:layout_height="100dp" />

            <TextView
                android:id="@+id/foodName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="13dp"
                android:layout_toEndOf="@+id/foodImage"
                android:layout_toRightOf="@+id/foodImage"
                android:text="Burger Cassab"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/foodDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/foodName"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp"
                android:layout_toEndOf="@+id/foodImage"
                android:layout_toRightOf="@+id/foodImage"
                android:text="Spiced with extra cheese" />

            <TextView
                android:id="@+id/foodPrice"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/foodDesc"
                android:layout_alignEnd="@id/foodDesc"
                android:text="N 20000"
                android:textColor="#ff4081"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_alignRight="@id/foodDesc" />

            <TextView
                android:id="@+id/viewmore"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/foodDesc"
                android:text="View more >>"
                android:textColor="#ff4081"
                android:layout_alignLeft="@id/foodDesc" />



              <TextView
                  android:layout_width="40dp"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="10dp"
                  android:text="@string/vertical_ellipsis"

                  android:layout_alignParentEnd="true"
                  android:layout_alignEnd="@id/foodName"
                  android:layout_marginRight="5dp"
                  android:layout_marginEnd="5dp"
                  android:id="@+id/OPTIONpp"
                  android:textSize="30sp"
                  android:textAppearance="?android:textAppearanceLarge"
                  android:layout_alignRight="@id/foodName"
                  android:layout_alignParentRight="true"
                  android:paddingLeft="@dimen/activity_horizontal_margin"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>





</LinearLayout>